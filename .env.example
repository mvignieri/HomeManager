# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Web Push VAPID keys (generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_CONTACT_EMAIL=mailto:admin@yourdomain.com

# Client-side VAPID public key (same value as VAPID_PUBLIC_KEY, add to Vercel with VITE_ prefix)
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# Firebase Admin (no longer used for push - kept for reference)
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}

# Email (for invitations)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Pusher (for real-time updates)
PUSHER_APP_ID=your-app-id
PUSHER_KEY=your-key
PUSHER_SECRET=your-secret
PUSHER_CLUSTER=eu

# Client-side Pusher (add to Vercel environment variables with VITE_ prefix)
VITE_PUSHER_KEY=your-key
VITE_PUSHER_CLUSTER=eu
